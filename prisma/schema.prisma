generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  role     String
  email    String   @unique
  password String
  createAt DateTime @default(now())

  auditLogs AuditLog[]
}

model AuditLog {
  id       Int      @id @default(autoincrement())
  userId   Int?
  action   String
  method   String
  endpoint String
  createAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])
}

